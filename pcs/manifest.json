{
    "manifest_version": 2,
    "name": "Press corpus scraper",

    "version": "0.2.3",

    "description": "Extraire et télécharger des articles de presse",
    "homepage_url": "https://github.com/fmoncomble/press_corpus_scraper",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },

    "permissions": [
        "activeTab",
        "downloads",
        "storage",
        "*://*.lefigaro.fr/*",
        "*://*.lemonde.fr/*",
        "*://*.lepoint.fr/*"
    ],

    "background": {
        "page": "background.html",
        "persistent": false
    },

    "content_scripts": [
        {
            "matches": [
                "https://recherche.lefigaro.fr/recherche*"
            ],
            "js": [
                "content_scripts/figaro.js", 
                "content_scripts/config.js"
            ],
            "css": [
                "content_scripts/figaro.css", 
                "content_scripts/config.css"
            ]
        },
        {
            "matches": [
                "https://www.lemonde.fr/recherche/?*"
            ],
            "js": [
                "content_scripts/lemonde.js",
                "content_scripts/config.js"
            ],
            "css": [
                "content_scripts/lemonde.css",
                "content_scripts/config.css"]
        },
        {
            "matches": [
                "https://www.lepoint.fr/recherche/*"
            ],
            "js": [
                "content_scripts/lepoint.js",
                "content_scripts/config.js"
            ],
            "css": [
                "content_scripts/lepoint.css",
                "content_scripts/config.css"
            ]
        }
    ],

    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://github.com/fmoncomble/press-corpus-scraper/releases/latest/download/update_manifest.json"
        }
    }
}
