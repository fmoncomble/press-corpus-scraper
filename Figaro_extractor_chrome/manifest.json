{
	"manifest_version": 2,
	"name": "Figaro Extractor",

	"version": "0.1",

	"description": "Extraire et télécharger des articles du Figaro",
	"homepage_url": "https://github.com/fmoncomble/Figaro_extractor",
	"icons": {
		"48": "icons/icon-48.png",
		"96": "icons/icon-96.png"
	},

	"permissions": ["activeTab", "downloads", "storage", "*://*.lefigaro.fr/*"],

	"background": {
	  "page": "background.html",
	  "persistent": false
	},
	
	"content_scripts": [
		{
			"matches": ["https://recherche.lefigaro.fr/recherche*"],
			"js": ["content_scripts/content.js"],
			"css": ["content_scripts/content.css"]
		}
	]
}
